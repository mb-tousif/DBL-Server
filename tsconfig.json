{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",                                 
    /* Modules */
    "module": "commonjs",  
    "rootDir": "./App",                                
    "outDir": "./App/dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                  
    /* Completeness */
    "skipLibCheck": true       
  },
  "include": ["**./App*.ts"]
}
